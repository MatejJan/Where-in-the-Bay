@import url(https://fonts.googleapis.com/css?family=Lato:300,400)

black(opacity=1)
  hsla(0, 0, 0, opacity)

white(opacity=1)
  hsla(0, 0, 100%, opacity)

off-white(opacity=1)
  hsla(240, 0, 98%, opacity)

*
  box-sizing border-box

body
  margin 0
  font-family Lato
  font-weight 300
  color black

  > canvas
    width 100%
    height 100%

.menu
  position fixed
  z-index 1
  left 0
  top 0
  bottom 0
  width 260px
  padding 15px
  background off-white(0.65)
  border-right 1px solid white(0.5)
  border-radius 1px
  box-shadow 0 10px 10px black(0.5)
  overflow-y auto

  h1
    font-size 24px
    font-weight 400
    margin-top 0

  .description
    font-size 15px

  .hint
    font-size 11px
    opacity 0.8

  a
    color black
    cursor pointer

  .functions
    .function
      .name
        font-size 12px
        font-weight 400
        cursor default

      .graph-area
        padding 0 20px

        .graph
          background off-white(0.1)
          width 100%
          height 50px
          cursor pointer


